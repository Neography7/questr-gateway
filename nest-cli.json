{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.graphql",
      { "include": "lang/**", "watchAssets": true, "outDir": "dist/src/" }
    ],
    "watchAssets": true
  }
}
